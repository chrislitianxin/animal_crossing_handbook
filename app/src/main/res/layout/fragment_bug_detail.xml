<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bugDetailViewModel"
            type="com.example.animalcrossinghandbook.viewmodels.BugDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.BugDetailFragment">

        <ImageView
            android:id="@+id/bug_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Bug Icon"
            app:bugIcon="@{bugDetailViewModel.bug}"
            app:layout_constraintBottom_toTopOf="@+id/bug_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/agrias_butterfly" />

        <TextView
            android:id="@+id/bug_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bugName="@{bugDetailViewModel.bug}"
            app:layout_constraintBottom_toTopOf="@+id/bug_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bug_icon"
            tools:text="Agrias Butterfly" />

        <TextView
            android:id="@+id/bug_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bugPrice="@{bugDetailViewModel.bug}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bug_name"
            tools:text="500" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>